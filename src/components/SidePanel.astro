    <a href="https://mastodon.social/@nanasnumber" target="_blank">
      <Fragment set:html={mastodon} />
    </a>

    <a href="https://twitter.com/nanasnumber" target="_blank">
      <Fragment set:html={x} />
    </a>

    <a href="mailto:shawnyisiouwu@gmail.com" target="_blank">
      <Fragment set:html={email} />
